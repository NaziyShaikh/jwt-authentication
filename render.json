{
  "services": [
    {
      "type": "web",
      "name": "jwt-auth-frontend",
      "env": "Node",
      "buildCommand": "npm install && npm run build",
      "startCommand": "cd frontend && npm run serve",
      "envVars": {
        "NODE_VERSION": "18.x"
      }
    },
    {
      "type": "web",
      "name": "jwt-auth-backend",
      "env": "Node",
      "buildCommand": "npm install",
      "startCommand": "node backend/server.js",
      "envVars": {
        "NODE_VERSION": "18.x"
      }
    }
  ]
}