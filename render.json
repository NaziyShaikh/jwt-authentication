{
  "services": [
    {
      "type": "web",
      "name": "jwt-auth-frontend",
      "env": "Node",
      "buildCommand": "cd frontend && npm install && npx react-scripts build",
      "startCommand": "cd frontend && npx serve -s build",
      "envVars": {
        "NODE_VERSION": "18.x"
      }
    },
    {
      "type": "web",
      "name": "jwt-auth-backend",
      "env": "Node",
      "buildCommand": "cd backend && npm install",
      "startCommand": "cd backend && npm start",
      "envVars": {
        "NODE_VERSION": "18.x"
      }
    }
  ]
}